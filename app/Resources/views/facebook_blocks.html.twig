                FB.getLoginStatus(function(response) {
                    if (response.status === 'connected') {
                        // connected
                        document.location = "{{ url("frontend_oauth_service_redirect", {
                            service: "facebook", 
                            studyCode: studyCode, 
                            _destination: path("_do_oauth", {'studyCode' : studyCode}) 
                            }) | raw
                        }}";
                    } else {
                        // not_authorized
                        FB.login(
