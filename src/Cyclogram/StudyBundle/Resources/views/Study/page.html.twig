<script type="text/javascript">
    //facebook share popup
    function fbs_click(width, height) {
        var leftPosition, topPosition;
        //Allow for borders.
        leftPosition = (window.screen.width / 2) - ((width / 2) + 10);
        //Allow for title and status bars.
        topPosition = (window.screen.height / 2) - ((height / 2) + 50);
        var windowFeatures = "status=no,height=" + height + ",width=" + width + ",resizable=yes,left=" + leftPosition + ",top=" + topPosition + ",screenX=" + leftPosition + ",screenY=" + topPosition + ",toolbar=no,menubar=no,scrollbars=no,location=no,directories=no";
        u=location.href;
        {% if reffferalShortStudyUrl is defined %}
        window.open('http://www.facebook.com/sharer.php?s=100&p[url]='+encodeURIComponent(u)+'&p[title]={{ studycontent.studyName }}+&p[summary]={{ reffferalShortStudyUrl }}&p[images][0]={{ graphic }}','sharer', windowFeatures);
        {% else %}
        window.open('http://www.facebook.com/sharer.php?s=100&p[url]='+encodeURIComponent(u)+'&p[title]={{ studycontent.studyName }}+&p[summary]={{ facebookcontent }}&p[images][0]={{ graphic }}','sharer', windowFeatures);
        {% endif %}
        return false;
    }
    function fbslike_click(width, height) {
        var leftPosition, topPosition;
        //Allow for borders.
        leftPosition = (window.screen.width / 2) - ((width / 2) + 10);
        //Allow for title and status bars.
        topPosition = (window.screen.height / 2) - ((height / 2) + 50);
        var windowFeatures = "status=no,height=" + height + ",width=" + width + ",resizable=yes,left=" + leftPosition + ",top=" + topPosition + ",screenX=" + leftPosition + ",screenY=" + topPosition + ",toolbar=no,menubar=no,scrollbars=no,location=no,directories=no";
        window.open('http://www.facebook.com/plugins/like.php?href=https://www.facebook.com/proofpilot','sharer', windowFeatures);
        return false;
    }
</script>
