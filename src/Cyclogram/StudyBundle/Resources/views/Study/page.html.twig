                                modal: true,
                                width: 'auto',
                                fluid: true,
                                resizable: false,
                                position: ['top',100],
                                open: funcCustom
                            });
                    }}
                });
                return false;
            });
            
            //login ajax
            $("#login_form").submit(function(e){
