{% extends '::general.html.twig' %}

{% block javascripts %}
    {% include '::google_analytics.html.twig' %}
{% endblock javascripts %}


{% block header %}
    {% include '::header.html.twig' %}
{% endblock header %}

{% block content %}
			<div class="intro_page">
			
				<div class="choose_action alt for_mobile">
					<h3>This study is sponsored by Nutrisystem</h3>
                    <a href="#" class="learn_more"><span>Learn how ProofPilot maintains the impartiality of research </span></a>
				</div>
            
				<div class="home_welcome">
					<div class="welcome_banner"><img src="{{ logo }}" alt="" height="126" width="126"></div>
					<div class="welcome_text">
                        <h2>{{ studycontent.studyName }}</h2>
                        <p>{{ studycontent.studyTagline | raw}}</p>
					</div>
				</div>
				
				<div class="mobile desc"><p>{{ studycontent.studyTagline | raw}}</p></div>
				
				<div class="choose_action alt">
					<h3>{% trans from "study" %}txt_to_do{% endtrans %}</h3>
                    <a href="#" class="learn_more"><span>Learn how ProofPilot maintains the impartiality of research </span></a>
				</div>
				    {% if message is defined %}
                        <p class="main_notification">
                            <span>{{ message }}</span>
                        </p>
                    {% endif %}
                    {% set queryParams = app.request.query.all %}
                    {% if (queryParams["eligible"] is defined) and (queryParams["eligible"] == false) %}
                        <p class="main_notification">
                            <span>{% trans with {'%studyname%': studycontent.studyName } from "study" %}msg_not_eligible{% endtrans %}</span>
                        </p>
                    {% endif %}
				
				<div class="text_wrapper">
					
					<div class="video_wrapper alt">
						<div class="video_placeholder"><img src="{{ graphic }}" height="393" width="670"></div>
						<div class="video_text alt">
							{% if not is_granted('ROLE_PARTICIPANT') or not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <ul class="participants_num _rows_2">
                                    <li class="left">
                                        <span class="text">Participants</span>
                                        <span class="num">3102</span>
                                    </li>
                                    <li class="right">
                                        <span class="text">Goal</span>
                                        <span class="num">3000</span>
                                    </li>
                                </ul>
                                {% set redirectUrl = path('_study', {studyUrl: studyUrl})  %}
                                <a href="{{ path('_eligibility_survey', {'studyCode': studyCode, 'surveyId': surveyId, 'redirectUrl': redirectUrl} ) }}" class="join"><span>Join the study</span></a>
                                <p class="note">Requires registration</p>
                                <div class="social_col">
                                    <a href="#" class="fb"><span>Join with Facebook</span></a>
                                    <a href="#" class="gp"><span>Join with Google</span></a>
                                </div>
                            {% endif %}
                            {% if is_granted('ROLE_PARTICIPANT') or is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                <ul class="participants_num rows_2">
                                    <li class="left">
                                        <span class="text">Participants</span>
                                        <span class="num">204</span>
                                    </li>
                                    <li class="right">
                                        <span class="text">Goal</span>
                                        <span class="num">3000</span>
                                    </li>
                                </ul>
                            
                        
                                <p class="join">Join the study before it reaches the goal and earn incentive points on your user profile.</p>
                                <a href="{{ path('_eligibility_survey', {'studyCode': studyCode, 'surveyId': surveyId, 'redirectUrl': redirectUrl} ) }}" class="join"><span>Join the study</span></a>
                            {% endif %}
						</div>
					</div>
					
					<div class="v_toolbar for_mobile">
						<ul class="social_share">
                            <li><a href="#" class="fb">Share</a></li>
                            <li><a href="#" class="tw">Tweet</a></li>
                            <li><a href="#" class="embed">Embed</a></li>
                            <li><a href="#" class="email">E-mail</a></li>
                        </ul>
					</div>
					
					<div class="page_bg">
					
						<div class="home_text">
							
							<div class="v_toolbar">
        						<ul class="social_share">
                                    <li><a href="#" class="fb">Share</a></li>
                                    <li><a href="#" class="tw">Tweet</a></li>
                                    <li><a href="#" class="embed">Embed</a></li>
                                    <li><a href="#" class="email">E-mail to a Friend</a></li>
                                </ul>
							</div>
							
							{{ studycontent.studyAbout |raw }}
                            {{ studycontent.studyWhatsInvolved | raw }}
	
	
							<div class="see_more">
                            
                                <div class="col1">
                                
                                    <h3 class="about">See more studies about:</h3>
                                    
                                    <p>Social Studies, Behaviourism, Clinical depression</p>
                                
                                </div>
                                
                                <div class="col2">
                                
                                    <h3 class="location">See more studies in:</h3>
                                    
                                    <p>Los Angeles, San Diego, Los Angeles, San Diego, Los Angeles</p>
                                
                                </div>
                            
                            </div>
						
						</div>

						
						<aside>
						
							<div class="box alt s_by">
								<h4>Conducted by</h4>
								<img width="60" height="75" src="images/tmp_logo_1.jpg" class="logo_img">
                                <p>Autism Research Team Rush University, <br />
                                <span>Chicago, IL USA</span></p>
								
							</div>
							
							<div class="box alt s_org">
								<h4>Affiliated Organizations</h4>
								<ul class="aff_org_list">
                                    <li>
                                        <img src="images/tmplogo_none.jpg" width="61" height="61"/>
                                        <p>Radio Station 99.5FM</p>
                                    </li>
                                    <li>
                                        <img src="images/tmplogo_none2.jpg" width="61" height="61"/>
                                        <p>Jackson State Univirsity</p>
                                    </li>
                                    <li>
                                        <img src="images/tmplogo_none.jpg" width="61" height="61"/>
                                        <p>My Brothers Keeper</p>
                                    </li>
                                </ul>
							</div>
                            
							<div class="box alt staff last">
								<h4>Staff</h4>
								<p>Patty Bouvier, Nelson Muntz, Barney Gumble, Lionel Hutz, Charles Montgomery Burns</p>
							</div>
						
						</aside>					
					
					</div>


				
				</div>
				
				
			</div>
			
		</div>
		
