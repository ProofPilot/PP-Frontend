{% extends "CyclogramKnowatHomeBundle:Default:index.html.twig" %}

{% block title %}
    Reset your password
{% endblock %}

{% block stylesheetsCustom %}
    <link rel="stylesheet" href="/bundles/cyclogramknowathome/css/knowathome.css" type="text/css" />
{% endblock %}

{% block javascriptsCustom %}
    <script>
        $(document).ready(function(){
            {% set picN = app.session.get('picN') %}
            $("body").anystretch("/bundles/cyclogramknowathome/images/website/backgrounds/{{picN}}.jpg");
        });
    </script>
{% endblock %}

{% block body %}
<div id="wrapper" class="container">

    <div class="leftColumn columns six ">

        <div class="logo" style="margin-bottom: 15px;">
            <a href="{{ path("CyclogramKnowatHomeBundle_homepage") }}"><img src="/bundles/cyclogramknowathome/images/website/logo-white.png" border="0" /></a>
        </div>

        <h2>Reset your password</h2>

        <div class="formContainer">

            <form action="{{ path("CyclogramKnowatHomeBundle_passwordReset", {'emailCode':emailCode, 'participantId':participantId} ) }}" method="post" {{ form_enctype(form) }} >

                <table width="100%" align="center">
                    <tbody>

                    <tr>
                        <td width="50%">
                            {{ form_label(form.password1) }}
                        </td>
                        <td width="60%">
                            {{ form_widget(form.password1) }}
                        </td>
                    </tr>

                    <tr>
                        <td width="40%">
                            {{ form_label(form.password1) }}
                            {{ form_errors(form.password1) }}
                        </td>
                        <td width="60%">
                            {{ form_widget(form.password2) }}
                            {{ form_errors(form.password2) }}
                        </td>
                    </tr>

                    <tr>
                        <td><br /></td>
                    </tr>

                    {{ form_rest(form) }}

                    </tbody>
                </table>

                <input type="submit" class="submitBtn" value="RESET PASSWORD" style="margin: auto; font-size: 1.2em;" />

            </form>

            {% if error %}
                <div>{{ error.message }}</div>
            {% endif %}

        </div>

    </div>

</div>
{% endblock %}