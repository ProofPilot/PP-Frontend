{%  extends '::base.html.twig' %}

{% block body %}
{% if studyId == 1 %}
    <body class="knowathome{{ nPic }}">
{% else  %}
    <body class="has_image">
{%  endif %}
    {% include '::header_reg.html.twig' %}
    <div class="mobile_reg">
      <h1><span>{% trans from "register" %}txt_join{% endtrans %} 4/4:</span>{% trans from "register" %}enter_sms_code{% endtrans %}</h1>
      <br>
      <form method="post" action="{{ path('simplereg_step_4',{'id' : id, 'studyId' : studyId}) }}">
        <ul class="form_fields">
          <li>

              {{ form_widget(form.sms_code, {'attr' : {'class' : 'default_input full', 'autocomplete': 'off'}}) }}
              {{ form_errors(form.sms_code) }}

          {{ error }}
          </li>
        </ul>
        <div class="center_align">
              {{ form_widget(form.confirmCode,{'attr':{'class':'submit'}}) }}
              {{ form_errors(form) }}
              {{ form_rest(form) }}
            </div>
        <div class="center_align"><a href={{ path('simplereg_step_3',{'id' : id}) }} class="repeat">{% trans from "register" %}no_code{% endtrans %}</a></div>
      </form>
    </div>
    {% include '::footer_reg.html.twig' %}
  </body>
{% endblock body %}
