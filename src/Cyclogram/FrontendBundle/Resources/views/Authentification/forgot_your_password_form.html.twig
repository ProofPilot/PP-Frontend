<div class="mobile_reg align_center">
    <h1 class="stronger smaller_margin"><span>{% trans from "login" %}forgot_password{% endtrans %}?</span></h1>
    <p>{% trans from "login" %}forgot_password_message{% endtrans %}</p>
    {% if error is defined %}
        <p class="error"><span>{{ error }}</span></p>
    {% endif %}
    <form method="post" action="{{ path('_forgot_pass') }}" id="forgot_password_form">
        <p class="enter_email">{% trans from "login" %}txt_form_username{% endtrans %}</p>
        {{ form_widget(formForgotPassword.participantUsername, {'attr' : {'class' : 'username_input'}}) }}
        {{ form_errors(formForgotPassword.participantUsername) }}
        {{ form_errors(formForgotPassword) }}
        <div class="center_align bottom_margin">
            {{ form_widget(formForgotPassword.sendPass, {'attr':{'class':'submit'}}) }}
            {{ form_rest(formForgotPassword) }}
        </div>
        <div class="center_align bottom_margin">
            <a href="{{ path('_forgot_username') }}" class="cant_remember">
                <span>{% trans from "login" %}cant_remember_username{% endtrans %}</span>
            </a>
            <button type="submit" style="display:none" id="submit_button"></button>
        </div>
    </form>
</div>