			<td>
				<a href="{{ host }}/{{ locale }}/main/contact_prefs" style="color: #bcbfc2; font-family: Arial; font-size: 12px; text-decoration: none;">{{ 'communictaion_preferences' | trans({}, "email", locale) }}</a>
			</td>
			<td>
				<a href="{{ host }}/{{ locale }}/sexpro/is_it_secure" style="color: #bcbfc2; font-family: Arial; font-size: 12px; text-decoration: none;">{{ 'our_security' | trans({}, "email", locale) }}</a>
