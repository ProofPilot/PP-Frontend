{%  extends 'CyclogramFrontendBundle:Email:email.html.twig' %}
{% block email_content %}
<td style="background-color: white; padding-left: 30px; padding-right: 30px;">
    <table style="width: 580px; margin-bottom: 30px;">
        <tbody>
            <tr>
                <td style="border-bottom: 1px dotted #999D93;">
                    <h3 style="color: #B9433A; font-size: 18px; margin: 0 0 15px; padding: 0;">Message from Matthew Amsden</h3>
                </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px dotted #999D93; border-bottom: 1px dotted #999D93; padding: 15px 0;">
                    <p style="color: #555555; font-size: 13px; margin: 0;">
                    {{ desription }}
                    </p>
                </td>
            </tr>
        </tbody>
    </table>
    <table style="width: 580px; border-bottom: 1px dotted #999D93; margin-bottom: 20px;">
        <tbody>
            <tr>
                <td style="padding-right: 20px; vertical-align: top; width: 79px;">
                    <img width="75" height="75" src="{{ graphic }}" style="border: 2px solid #96BD30;" />
                </td>
                <td class="middle">
                    <div style="margin-top: 0px;"
                        {{ studycontent.studyAbout |raw }}
                    </div>
                </td>
            </tr>
            <tr>
                <td style="padding-bottom: 45px; padding-top: 40px; text-align: center;"colspan="2">
                    <a href="{{ url }}" style="background: none repeat scroll 0 0 #8AB524; border: 1px solid #7EA61F; border-radius: 4px 4px 4px 4px; color: #FFFFFF; display: inline-block;
                    font-size: 20px; font-weight: bold; padding: 15px 50px 15px 60px; text-align: center; text-decoration: none;">{{ 'join' | trans({}, "email", locale) }}</a>
                </td>
            </tr>
        </tbody>
    </table>
    <table style="width: 580px">
        <tbody>
            <tr>
                <td width="60%" style="padding-bottom: 20px;">
                    <h3 style="color: #B9433A; font-size: 2em; font-weight: bold; margin: 0; padding: 0;">Join a study</h3>
                </td>
{#                     <td width="40%" align="right" style="padding-bottom: 20px;">#}
{#                         <a href="#" style="color: #727272; font-size: 13px; text-decoration: none;">#}
{#                             More studies#}
{#                             <img width="13" height="11" style="display: inline-block !important;" src="{{ images.arrow }}">#}
{#                         </a>#}
{#                     </td>#}
            </tr>
        </tbody>
    </table>
    <table style="width: 580px">
        <tbody>
            <tr>
                {% for study in studies %}
                    <td style="vertical-align: top;">
                        {% if study.studyLogo is empty %}
                            <a href="{{  url('_page', {'studyUrl' : study.studyCode}) }}"  style="display: inline-block; margin: 0 auto; width: 164px;"><img src="{{ images.tmp_logo }}" width="165" height="109"  style="margin-bottom: 20px;" alt="" title=""/></a>
                        {% else %}
                             <a href="{{  url('_page', {'studyUrl' : study.studyCode}) }}"  style="display: inline-block; margin: 0 auto; width: 164px;"><img src="https:{{ study_image_url }}/{{ study.studyId }}/{{ study.studyLogo }}" width="165" height="109"  style="margin-bottom: 20px;" alt="" title=""/></a>
                        {% endif %}
                        <h4 style="font-size: 1.1em; margin: 0 0 15px; padding: 0; text-align: left; width: 165px;"><a style="color: #000 !important; font-size: 0.8em; text-decoration: none;"href="{{ url('_page', {'studyUrl' : study.studyCode}) }}">{{ study.studyName }}</a></h4>
                        <p style="color: #969696; text-align: left; width: 165px;">{{ study.studyTagline | raw }}</p>
                    </td>
                {% endfor %}
            </tr>
        </tbody>
    </table>
</td>
{% endblock email_content %}