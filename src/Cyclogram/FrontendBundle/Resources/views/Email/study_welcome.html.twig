{%  extends 'CyclogramFrontendBundle:Email:email.html.twig' %}
{% block email_content %}
<td colspan="2" class="content" align="center">
    <table style="width: 580px; height: 136px;" class="table_social">
        <tbody>
            <tr>
                <td class="logo_cont" valign="top"> <img src="images/logo_tmp.jpg" height="82" width="80"></td>
                <td class="desc">
                    <h2>Welcome to {{ studyName }}</h2>
                    <p>We're really excited to have you on board. Here's what to expect on your journey with {{ studyName }}:</p>
                    <p>{{ studyInvolved | raw }}</p>
                </td>
            </tr>
        </tbody>
    </table>
    <table style="width: 580px; height: 102px;" class="table_share">
        <tbody>
            <tr>
                <td class="for_sharing">
                    <table style="width: 567px; height: 56px;" class="sharing_options">
                        <tbody>
                            <tr>
                                <td class="text">
                                    <h2>Invite Your Friends to Join<strong><br></strong></h2>
                                </td>
                                <td class="social"><a href="#"><img src="images/fb.jpg" height="35" width="35"></a></td>
                                <td class="social"><a href="#"><img src="images/tw.jpg" height="35" width="35"></a></td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
    <table width="100%">
        <tbody>
            <tr>
                <td><br>
                    <h2>Hold On! Here's Your First Study Task ... </h2>
                    <br>
                    {% for intervention in interventions %}
                    <table class="cols_3" style="border-spacing: 0px; margin-bottom: 0px; color: rgb(0, 0, 0); font-family: Arial; font-size: 12px; font-style: normal; font-variant: normal; font-weight: normal; letter-spacing: normal; line-height: normal; orphans: auto; text-indent: 0px; text-transform: none; white-space: normal; widows: auto; word-spacing: 0px; -webkit-text-stroke-width: 0px;" width="100%">
                        <tbody>
                             <tr></tr>
                             <tr>
                                 <td class="for_image" style="border-collapse: collapse; border-bottom-width: 1px; border-bottom-style: dotted; border-bottom-color: rgb(153, 157, 147); vertical-align: middle; padding-bottom: 30px; width: 79px;">
                                     <img src="{{ intervention.logo }}" style="display: block !important; border: 2px solid rgb(150, 189, 48);" height="75" width="75">
                                 </td>
                                 <td class="middle" style="border-collapse: collapse; border-bottom-width: 1px; border-bottom-style: dotted; border-bottom-color: rgb(153, 157, 147); vertical-align: middle; padding-bottom: 30px; padding-left: 25px;">
                                     <h3 style="padding: 0px; margin: 0px 0px 10px; font-size: 20px;">{{ intervention.title|raw}}</h3>
                                     <p style="padding: 0px; margin: 0px; color: rgb(85, 85, 85); font-size: 13px;">{{ intervention.content|raw }}</p>
                                 </td>
                                 <td class="button_col" style="border-collapse: collapse; border-bottom-width: 1px; border-bottom-style: dotted; border-bottom-color: rgb(153, 157, 147); vertical-align: middle; padding-bottom: 30px; width: 150px; text-align: right;">
                                     <a href="{{ intervention.url }}" style="display: inline-block; color: white; font-size: 18px; font-weight: bold; border: 1px solid rgb(126, 166, 31); border-top-left-radius: 4px; border-top-right-radius: 4px; border-bottom-right-radius: 4px; border-bottom-left-radius: 4px; background-color: rgb(138, 181, 36); padding: 12px 18px; text-decoration: none; background-position: initial initial; background-repeat: initial initial;">{{ 'do_it' | trans({}, "email", locale) }}</a>
                                 </td>
                             </tr>
                         </tbody>
                     </table>
                     {% endfor %}
                 </td>
             </tr>
             <tr>
             <td class="join_col_small" align="left">
                 <h3>Join Other Studies at ProofPilot</h3>
             </td>
             </tr>
         </tbody>
     </table>
     {% include 'CyclogramFrontendBundle:Email:email_studies_list.html.twig' %}
</td>
{% endblock email_content %}