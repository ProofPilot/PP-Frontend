{%  extends '::base.html.twig' %}

{% block body %}
<body class="page_survey">
    <div class="site_container">
        {% block header %}
            {% include '::header.html.twig' with {'studyCode' : studyCode}%}
        {% endblock header %}
        <div class="panel alt_bg">
            <div class="panel_left survey">
                {% include '::profile_info.html.twig' %}
                <div class="menu_cont"></div>
            </div>
            <div class="panel_right">
                <div class="dashboard_title white">
                    <div class="image"><img src="{{ logo }}" width="93" height="93" alt="" title=""/></div>
                    <h1>{{ survey.title }}</h1>
                </div>
                <div class="prev_next for_mobile">
                    <ul>
                        <li class="back_left"><a class="back" href="#"><span>Back</span></a></li>
                        <li class="next_right"><a class="next" href="#"><span>Next</span></a></li>
                    </ul>
                </div>
            </div>
            <div class="dashboard_panel">
                <iframe src="{{ survey.url }}" id="iframe1" width="1014"></iframe>
            </div>
        </div>
    </div>	
    {% include '::footer.html.twig' %}
    <script type="text/javascript">
        $('#iframe1').load(function(){
            location.href='#';
            var frame = $(this);
            var frameSize = function() {
                var frameHeight = frame.contents().find("#content-wrapper").height();
                frame.contents().find("html").css('overflow', 'hidden');
                frame.height(frameHeight);
            };

            frameSize();
            
            $(window).resize(frameSize);
            frame.contents().click(frameSize);
            frame.contents().find('.checkbox').click(frameSize);
            var surveydata = frame.contents().find('#surveydata');
            var surveyId = surveydata.attr('surveyid');
            var saveId = surveydata.attr('saveid');

            if(surveyId !== undefined && saveId !== undefined) {
                window.location = {% if app.environment == "prod" %}'/app.php'{% else %}'/app_dev.php'{% endif %} + '/' + '{{ app.request.locale }}' + '/surveyResponse?&studyCode={{ studyCode }}&surveyId=' + surveyId + '&saveId=' + saveId + '&redirectUrl=' + '{{ app.request.get('redirectUrl') }}';
            }

        });
    </script>
    <style>
        .panel_right {
            height: 130px;
        }
        iframe {
            border: 1px;
            margin-left: -8px;
        }
        .dashboard_panel {
            margin-bottom: -6px;
            width: 100%;
        }
    </style>
</body>
{% endblock body %}